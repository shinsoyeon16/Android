<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border2"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- 상단부   식당이름, 즐겨찾기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvRname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식당이름"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">
            <ImageButton
                android:id="@+id/imgRfavorite"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#ffffff"
                android:src="@drawable/favorite_off"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <!-- 중앙부   식당정보, 사진-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvRaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_margin="3dp"
                android:text="경기도 용인시 처인구 김량장동 345-19번지 노블레스 503호" />
            <TextView
                android:id="@+id/tvRnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_margin="3dp"
                android:text="031) 877-2536" />
            <TextView
                android:id="@+id/tvRhomepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textSize="11dp"
                android:text="http://www.naver.com" />
        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:background="@drawable/default_restaurant"
            android:scaleType="fitXY"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>

    <!-- 하단부   리뷰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_margin="3dp">
        <Button
            android:id="@+id/btnRMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴보러가기"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:background="#ff8888"
            android:layout_marginRight="20dp" />
        <Button
            android:id="@+id/btnRreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰보러가기"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:background="#ff8888"/>

    </LinearLayout>
</LinearLayout>